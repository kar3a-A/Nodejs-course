<!DOCTYPE html>
<html lang="en">
<%- include('components/head.ejs') %> 
<body>
    <%- include('components/navbar.ejs') %>
    <div class="container">
        <h3>Cart</h3>
        <h3>items</h3>
        
        <div class="blog-card">
            <% if (items.length) { %>
                <% items.forEach(item => { %>
                    <h4>
                        Product Name: <%= item.product %> | Price: $<%= item.price %> 
                    </h4>
                <% }) %>
            <% } else { %>
                <h3>Items are out of stock</h3>
            <% } %>
        </div>
    </div> 
</body>
</html>