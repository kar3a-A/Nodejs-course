<div class="blog-form">
    <h2>Blog Create</h2>

    <form action="/blogs" method="POST">
        <div class="form-group">
            <label for="">Title</label>
            <input name="blogTitle" type="text">
        </div>
        <div class="form-group">
            <label for="">Intro</label>
            <input name="blogIntro" type="text">
        </div>
        <div class="form-group">
            <label for="blog-body">Body</label>
            <textarea name="blogBody" id="" cols="30" rows="10"></textarea>
        </div>
        <div class="form-group">
            <button type="submit" class="blog-create-btn">Create</button>
        </div>
    </form>
</div>