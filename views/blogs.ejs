
<h3>Blogs page</h3>

<% if (blogs.length) { %>
    <% blogs.forEach(blog => { %>
        <div class="blog-card">
            <a href="/blogs/<%= blog._id  %> ">
                <h3><%= blog.title %></h3>
            </a>
            <h4><%= blog.intro %></h4>
            <p><%= blog.body %></p>
        </div>
    <% }) %>
<% } else { %>
    <h3>No Blog Found</h3>
<% } %>
